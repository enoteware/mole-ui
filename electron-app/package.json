{
  "name": "mole",
  "version": "1.0.0",
  "description": "Mac system cleaner - Clean, optimize, and maintain your Mac",
  "main": "main.js",
  "author": "Mole",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac --arm64"
  },
  "build": {
    "appId": "com.mole.app",
    "productName": "Mole",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64", "x64"]
        }
      ],
      "extraResources": [
        {
          "from": "../bin/web-go",
          "to": "bin/web-go"
        },
        {
          "from": "../cmd/web/templates",
          "to": "templates"
        },
        {
          "from": "../bin/analyze-go",
          "to": "bin/analyze-go"
        },
        {
          "from": "../bin/status-go",
          "to": "bin/status-go"
        }
      ]
    },
    "dmg": {
      "title": "Mole Installer",
      "icon": "assets/icon.icns",
      "background": "assets/dmg-background.png",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 140,
          "y": 180,
          "type": "file"
        },
        {
          "x": 400,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "main.js",
      "preload.js",
      "assets/**/*"
    ]
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "electron": "^25.9.0",
    "electron-builder": "^24.9.1"
  }
}
